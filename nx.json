{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "allProjectFiles": ["{projectRoot}/**/*"],
    "globalLintingConfigFiles": [
      "{workspaceRoot}/.eslintrc.js",
      "{workspaceRoot}/.eslintrcignore",
      "{workspaceRoot}/eslint-configs/*.js"
    ],
    "globalUnitTestingConfigFiles": [
      "{workspaceRoot}/jest.config.ts",
      "{workspaceRoot}/jest.preset.js",
      "{workspaceRoot}/jest.resolver.js",
      "{workspaceRoot}/.coverage.js"
    ],
    "production": [
      "allProjectFiles",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/src/test.ts",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.ts",
      "{workspaceRoot}/.browserslistrc",
      "{workspaceRoot}/.htmlhintrc",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/action-config.json",
      "{workspaceRoot}/.npmrc",
      "{workspaceRoot}/.nvmrc",
      "{workspaceRoot}/.github/workflows/ci.yml"
    ],
    "default": ["production", "sharedGlobals", "projectSpecificFiles"],
    "projectSpecificFiles": []
  },
  "targetDefaults": {
    "@angular-devkit/build-angular:browser": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^production"]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "allProjectFiles",
        "globalLintingConfigFiles",
        "{workspaceRoot}/.eslintrc.json"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^production", "globalUnitTestingConfigFiles"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "playwright",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nx/angular:component": {
      "style": "css"
    }
  },
  "parallel": 3,
  "defaultBase": "main"
}
